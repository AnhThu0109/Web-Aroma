{{> banner}}
  <!--================Checkout Area =================-->
  <section class="checkout_area section-margin--small">
    <div class="container">
        <div class="billing_details">
            <div class="row">
                <div class="col-lg-8">
                    <h3>Shipping address</h3>
                    <form class="row contact_form" action="/cart/checkout/shipping" method="POST">
                        <div class="col-md-6 form-group p_star">
                            <label for="firstName">First name</label>
                            <input type="text" class="form-control" id="firstName" name="firstName" required>
                            <div class="invalid-feedback">
                                Valid first name is required.
                            </div>
                        </div>
                        <div class="col-md-6 form-group p_star">
                            <label for="lastName">Last name</label>
                            <input type="text" class="form-control" id="lastName" name="lastName" required>
                            <div class="invalid-feedback">
                                Valid last name is required.
                            </div>
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="username">Email</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">@</span>
                                </div>
                                <input type="email" name="email" class="form-control" id="username" placeholder="you@example.com" required>
                                <div class="invalid-feedback" style="width: 100%;">
                                    Your email is required.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 form-group p_star">
                            <label for="phone">Phone number</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-phone"></i></span>
                                </div>
                                <input type="text" name="phone" class="form-control" id="phone" required>
                                <div class="invalid-feedback">
                                    Please enter your phone number.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="address">Address</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-road"></i></span>
                                </div>
                                <input type="text" name="address" class="form-control" id="address" placeholder="1234 Main St" required>
                                <div class="invalid-feedback">
                                    Please enter your shipping address.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 form-group p_star">
                            <label for="country">Country</label>
                            <select class="country_select" name="country" id="country">
                                <option value="" selected disabled>Choose...</option>
                                <option value="US">United States</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a valid country.
                            </div>
                        </div>
                        <div class="col-md-12 form-group p_star">
                            <label for="state">State</label>
                            <select class="country_select" name="state" id="state">
                                <option value="" selected disabled>Choose...</option>
                                <option value="US">California</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a valid state.
                            </div>
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="zip">Zip</label>
                            <input type="text" class="form-control" id="zip" name="zip">
                            <div class="invalid-feedback">
                                    Zip code required.
                            </div>
                        </div>
                        <div class="col-md-12 form-group mb-0">
                            <hr>
                            <button class="btn btn-success btn-lg btn-block" type="submit">Confirm to Pay now</button>
                        </div>
                    </form>
                </div>
                <div class="col-lg-4">
                    <div class="order_box">
                        <h2>Your Order</h2>
                        {{#with cart}}
                        <ul class="list">
                            <li><a href="#"><h4>Product <span>Total</span></h4></a></li>
                            {{#each items}}
                            <li>
                                <a href="/products/{{item.id}}">{{quantity}} x {{item.name}}<span class="last">${{price}}</span></a>
                            </li>
                            {{/each}}
                        </ul>
                        <ul class="list list_2">
                            <li><a href="#">Total <span>${{totalPrice}}</span></a></li>
                        </ul>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
    </div>
  </section>
  <!--================End Checkout Area =================-->